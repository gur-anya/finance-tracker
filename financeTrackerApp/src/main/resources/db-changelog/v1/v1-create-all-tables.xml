<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-users-table" author="Gureva Anna">
        <createTable tableName="users" schemaName="main"
                     remarks="Таблица для хранения всех зарегистрированных пользователей">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)" defaultValue="USER">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="budget_limit" type="DECIMAL(19, 2)" defaultValueNumeric="100000.00">
                <constraints nullable="false"/>
            </column>
            <column name="goal_name" type="VARCHAR(255)">
            </column>
            <column name="goal_sum" type="DECIMAL(19, 2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="budget_notification_status" type="VARCHAR(255)" defaultValue="NOT_NOTIFIED">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-transactions-table" author="Gureva Anna">
        <createTable tableName="transactions" schemaName="main"
                     remarks="Таблица для хранения всех созданных транзакций">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sum" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(200)"/>
            <column name="timestamp" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_transactions_users" references="main.users(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-token-blacklist" author="Gureva Anna">
        <createTable tableName="token_blacklist" schemaName="service_schema"
                     remarks="Служебная таблица для хранения устаревших токенов">
            <column name="id" type="BIGSERIAL">
            <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token_value" type="VARCHAR(500)" remarks="Токен">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>